<h1>Item Edit</h1>
<%= form_for(@record, :url => {:action => "item_edit"}) do |f| %>
  <%= f.hidden_field :owner_id, :value => current_user.id %>
  <%= f.hidden_field :id, :value => @record[:id] %>
  <div class="field">
    <%= f.label 'Item name' %><br>
    <%= f.text_field :name, :value => @record[:name] %>
  </div>
  <div class="field">
    <%= f.label 'Item quantity' %><br>
    <%= f.text_field :quantity, :value => @record[:quantity] %>
  </div>
  <div class="field">
    <%= f.label 'Item price' %><br>
    <%= f.text_field :price, :value => @record[:price] %>
  </div>
  <div class="field">
    <%= f.label 'Item description' %><br>
    <%= f.text_area :description, :value => @record[:description] %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
  </br>
  <%= link_to "Back", item_managements_item_query_path%>
<%end%>